{
  "$schema": "https://claude.ai/schemas/hooks.json",
  "description": "Complete CAMI hooks configuration with all lifecycle events",
  "hooks": {
    "SessionStart": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "${CLAUDE_PLUGIN_ROOT}/scripts/cami-session-start.sh",
            "description": "CAMI: Scan deployed agents and show status"
          }
        ]
      }
    ],
    "PreToolUse": [
      {
        "matcher": ".*",
        "hooks": [
          {
            "type": "command",
            "command": "${CLAUDE_PLUGIN_ROOT}/scripts/cami-pre-tool-validate.sh",
            "description": "CAMI: Validate agent deployments before execution"
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": ".*",
        "hooks": [
          {
            "type": "command",
            "command": "${CLAUDE_PLUGIN_ROOT}/scripts/cami-post-tool.sh",
            "description": "CAMI: Auto-update CLAUDE.md after agent deployment"
          }
        ]
      }
    ],
    "SessionEnd": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "${CLAUDE_PLUGIN_ROOT}/scripts/cami-session-end.sh",
            "description": "CAMI: Log session summary"
          }
        ]
      }
    ]
  }
}
